[user]
	name       = 1206yaya
	email      = 1206yaya@gmail.com
[include]
    path = ~/.gitconfig.local
[alias]
	s   = status -sb
	sw	= switch
	d   = diff
	a   = add
	aa  = add -A
	b   = branch
	ch  = checkout
	chb = checkout -b
	c   = commit
	cm  = commit -m
	pso = push origin
	p   = push
	pl  = pull
	plo = pull origin
	f   = fetch
	fup = fetch upstream
[core]
	excludesfile = ~/.gitignore_global
	editor = code --wait
[init]
	defaultBranch = main
[commit]
	gpgsign = true
[gpg]
	program = /usr/local/bin/gpg
[pull]
	rebase = false
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta
[delta]
    line-numbers = true
    side-by-side = true
[interactive]
    diffFilter = delta --color-only
; [url "git@github.com:"]
;   insteadOf = https://github.com/
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
